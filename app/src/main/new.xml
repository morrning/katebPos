<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">

    <EditText android:id="@+id/editTextPhoneNumber" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="شماره تلفن" android:inputType="phone" />

    <EditText android:id="@+id/editTextPassword" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="کلمه عبور"
        android:inputType="textPassword" />

    <Button android:id="@+id/buttonLogin" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="ورود" />

</LinearLayout>